    for SCENENUM in $(seq 851 1 869); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 22
    for SCENENUM in $(seq 870 1 897); do
         printf "${SCENES[$SCENENUM]}" && sleep 1 && clear
    done

    # Scene 23
    for SCENENUM in $(seq 898 1 913); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 24
    for SCENENUM in $(seq 914 1 982); do
         printf "${SCENES[$SCENENUM]}" && sleep 2 && clear
    done

    # Scene 25
    for SCENENUM in $(seq 983 1 995); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 26
    for SCENENUM in $(seq 996 1 1008); do
         printf "${SCENES[$SCENENUM]}" && sleep 2 && clear
    done

    # Scene 27
    for SCENENUM in $(seq 1009 1 1045); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

