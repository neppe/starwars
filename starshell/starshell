#!/bin/bash

# Credits to Nicholas Farrow (https://nicholasfarrow.com/Printing-a-Star-Wars-Scene-in-Terminal-with-Bash/)
# Credits to cscs @ forum.manjaro.org for help and ideas

CFGLOC=https://raw.githubusercontent.com/puxplaying/starshell/master/starshell/main
SCENEDIR=/tmp/starshell
SCENEDIR1=$(pwd)/

if [ -z "$STARWARS" ]; then
 SCENEDATA=$(<"$SCENEDIR1/main");
else
 SCENEDATA=$(wget -qO- "$CFGLOC");
fi

STARTSCENE=1

# Make folder if doesn't exist
[ -d $SCENEDIR ] || mkdir $SCENEDIR

    # Load scenes
    IFS=$'Z' read -d '' -ra SCENES <<< "$SCENEDATA"

    #echo ${#SCENES[@]}

    # Intro
    for SCENENUM in $(seq 0 1 3); do
         printf "${SCENES[$SCENENUM]}" && sleep 2 && clear
    done

    ## Intro 2
    for SCENENUM in $(seq 4 1 48); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.1 && clear
    done

    ## Intro 3
    for SCENENUM in $(seq 49 1 52); do
         printf "${SCENES[$SCENENUM]}" && sleep 3 && clear
    done

    # Intro 4
    for SCENENUM in $(seq 53 1 111); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.7 && clear
    done

    # Scene 1
    for SCENENUM in $(seq 112 1 129); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.2 && clear
    done

    # Scene 2
    for SCENENUM in $(seq 130 1 232); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.1 && clear
    done

    # Scene 3
    for SCENENUM in $(seq 233 1 252); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.8 && clear
    done

    # Scene 4
    for SCENENUM in $(seq 252 1 350); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.2 && clear
    done

    # Scene 5
    for SCENENUM in $(seq 350 1 355); do
         printf "${SCENES[$SCENENUM]}" && sleep 2.5 && clear
    done

    # Scene 6
    for SCENENUM in $(seq 356 1 401); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.7 && clear
    done

    # Scene 7
    for SCENENUM in $(seq 402 1 419); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.1 && clear
    done

    # Scene 8
    for SCENENUM in $(seq 420 1 423); do
         printf "${SCENES[$SCENENUM]}" && sleep 1.5 && clear
    done

    # Scene 9
    for SCENENUM in $(seq 424 1 437); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 10
    for SCENENUM in $(seq 438 1 446); do
         printf "${SCENES[$SCENENUM]}" && sleep 1 && clear
    done

    # Scene 11
    for SCENENUM in $(seq 447 1 478); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 12
    for SCENENUM in $(seq 479 1 484); do
         printf "${SCENES[$SCENENUM]}" && sleep 1.5 && clear
    done

    # Scene 12
    for SCENENUM in $(seq 485 1 605); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.1 && clear
    done

    # Scene 13
    for SCENENUM in $(seq 606 1 654); do
         printf "${SCENES[$SCENENUM]}" && sleep 1 && clear
    done

    # Scene 14
    for SCENENUM in $(seq 655 1 672); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.2 && clear
    done

    # Scene 15
    for SCENENUM in $(seq 672 1 684); do
         printf "${SCENES[$SCENENUM]}" && sleep 1 && clear
    done

    # Scene 16
    for SCENENUM in $(seq 685 1 741); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.2 && clear
    done

    # Scene 17
    for SCENENUM in $(seq 742 1 746); do
         printf "${SCENES[$SCENENUM]}" && sleep 1.5 && clear
    done

    # Scene 18
    for SCENENUM in $(seq 747 1 800); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.1 && clear
    done

    # Scene 19
    for SCENENUM in $(seq 801 1 827); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 20
    for SCENENUM in $(seq 828 1 850); do
         printf "${SCENES[$SCENENUM]}" && sleep 3 && clear
    done

