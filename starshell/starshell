    for SCENENUM in $(seq 1063 1 1111); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.1 && clear
    done

    # Scene 30
    for SCENENUM in $(seq 1112 1 1139); do
         printf "${SCENES[$SCENENUM]}" && sleep 1.5 && clear
    done

    # Scene 31
    for SCENENUM in $(seq 1140 1 1152); do
         printf "${SCENES[$SCENENUM]}" && sleep 2 && clear
    done

    # Scene 32
    for SCENENUM in $(seq 1153 1 1202); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.5 && clear
    done

    # Scene 33
    for SCENENUM in $(seq 1203 1 1293); do
         printf "${SCENES[$SCENENUM]}" && sleep 2 && clear
    done

    # Scene 34
    for SCENENUM in $(seq 1294 1 1331); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.7 && clear
    done

    # Scene 35
    for SCENENUM in $(seq 1332 1 1352); do
         printf "${SCENES[$SCENENUM]}" && sleep 3 && clear
    done

    # Scene 36
    for SCENENUM in $(seq 1353 1 1362); do
         printf "${SCENES[$SCENENUM]}" && sleep 2 && clear
    done

    # Scene 37
    for SCENENUM in $(seq 1363 1 1369); do
         printf "${SCENES[$SCENENUM]}" && sleep 5 && clear
    done

    # Scene 38
    for SCENENUM in $(seq 1370 1 1383); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 39
    for SCENENUM in $(seq 1384 1 1389); do
         printf "${SCENES[$SCENENUM]}" && sleep 3 && clear
    done

    # Scene 40
    for SCENENUM in $(seq 1390 1 1425); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.1 && clear
    done

    # Scene 41
    for SCENENUM in $(seq 1426 1 1464); do
         printf "${SCENES[$SCENENUM]}" && sleep 2 && clear
    done

