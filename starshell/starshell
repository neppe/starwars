         printf "${SCENES[$SCENENUM]}" && sleep 0.1 && clear
    done

    # Scene 45
    for SCENENUM in $(seq 1620 1 1640); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.5 && clear
    done

    # Scene 46
    for SCENENUM in $(seq 1641 1 1715); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.2 && clear
    done

    # Scene 47
    for SCENENUM in $(seq 1716 1 1723); do
         printf "${SCENES[$SCENENUM]}" && sleep 3 && clear
    done

    # Scene 48
    for SCENENUM in $(seq 1723 1 1762); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.1 && clear
    done

    # Scene 49
    for SCENENUM in $(seq 1763 1 1775); do
         printf "${SCENES[$SCENENUM]}" && sleep 2.5 && clear
    done

    # Scene 50
    for SCENENUM in $(seq 1776 1 1791); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.1 && clear
    done

    # Scene 51
    for SCENENUM in $(seq 1792 1 1813); do
         printf "${SCENES[$SCENENUM]}" && sleep 2 && clear
    done

    # Scene 52
    for SCENENUM in $(seq 1814 1 1885); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.2 && clear
    done

    # Scene 53
    for SCENENUM in $(seq 1886 1 1904); do
         printf "${SCENES[$SCENENUM]}" && sleep 1 && clear
    done

    # Scene 54
    for SCENENUM in $(seq 1905 1 1911); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.5 && clear
    done

    # Scene 55
    for SCENENUM in $(seq 1912 1 1921); do
         printf "${SCENES[$SCENENUM]}" && sleep 2 && clear
    done

    # Scene 56
    for SCENENUM in $(seq 1922 1 1940); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 57
    for SCENENUM in $(seq 1941 1 1970); do
         printf "${SCENES[$SCENENUM]}" && sleep 2.5 && clear
    done

    # Scene 58
    for SCENENUM in $(seq 1971 1 1976); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.5 && clear
    done

    # Scene 59
    for SCENENUM in $(seq 1977 1 1990); do
         printf "${SCENES[$SCENENUM]}" && sleep 2.5 && clear
    done

    # Scene 60
    for SCENENUM in $(seq 1991 1 2003); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.5 && clear
    done

    # Scene 61
    for SCENENUM in $(seq 2004 1 2073); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 62
    for SCENENUM in $(seq 2074 1 2078); do
         printf "${SCENES[$SCENENUM]}" && sleep 1 && clear
    done

    # Scene 63
    for SCENENUM in $(seq 2079 1 2170); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.1 && clear
    done

    # Scene 64
    for SCENENUM in $(seq 2171 1 2199); do
         printf "${SCENES[$SCENENUM]}" && sleep 1.5 && clear
    done

    # Scene 65
    for SCENENUM in $(seq 2200 1 2316); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 66
    for SCENENUM in $(seq 2317 1 2330); do
         printf "${SCENES[$SCENENUM]}" && sleep 1.5 && clear
    done

    # Scene 67
    for SCENENUM in $(seq 2331 1 2355); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 68
    for SCENENUM in $(seq 2356 1 2428); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.5 && clear
    done

    # Scene 69
    for SCENENUM in $(seq 2429 1 2435); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 70
    for SCENENUM in $(seq 2436 1 2446); do
         printf "${SCENES[$SCENENUM]}" && sleep 2 && clear
    done

    # Scene 71
    for SCENENUM in $(seq 2447 1 2488); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.1 && clear
    done

    # Scene 72
    for SCENENUM in $(seq 2489 1 2507); do
         printf "${SCENES[$SCENENUM]}" && sleep 1 && clear
    done

    # Scene 73
    for SCENENUM in $(seq 2508 1 2528); do
         printf "${SCENES[$SCENENUM]}" && sleep 1.5 && clear
    done

    # Scene 74
    for SCENENUM in $(seq 2529 1 2559); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.1 && clear
    done

    # Scene 75
    for SCENENUM in $(seq 2560 1 2575); do
         printf "${SCENES[$SCENENUM]}" && sleep 3 && clear
    done

    # Scene 76
    for SCENENUM in $(seq 2576 1 2590); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 77
    for SCENENUM in $(seq 2591 1 2601); do
         printf "${SCENES[$SCENENUM]}" && sleep 1.5 && clear
    done

    # Scene 78
    for SCENENUM in $(seq 2602 1 2603); do
         printf "${SCENES[$SCENENUM]}" && sleep 3 && clear
    done

    # Scene 79
    for SCENENUM in $(seq 2604 1 2608); do
         printf "${SCENES[$SCENENUM]}" && sleep 2 && clear
    done

    # Scene 80
    for SCENENUM in $(seq 2609 1 2622); do
         printf "${SCENES[$SCENENUM]}" && sleep 1 && clear
    done

    # Scene 81
    for SCENENUM in $(seq 2623 1 2646); do
         printf "${SCENES[$SCENENUM]}" && sleep 2 && clear
    done

    # Scene 82
    for SCENENUM in $(seq 2646 1 2674); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.5 && clear
    done

    # Scene 83
    for SCENENUM in $(seq 2675 1 2691); do
         printf "${SCENES[$SCENENUM]}" && sleep 2 && clear
    done

    # Scene 84
    for SCENENUM in $(seq 2692 1 2741); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 85
    for SCENENUM in $(seq 2742 1 2753); do
         printf "${SCENES[$SCENENUM]}" && sleep 1 && clear
    done

    # Scene 86
    for SCENENUM in $(seq 2754 1 2826); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 87
    for SCENENUM in $(seq 2827 1 2859); do
         printf "${SCENES[$SCENENUM]}" && sleep 2 && clear
    done

    # Scene 88
    for SCENENUM in $(seq 2860 1 2884); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 89
    for SCENENUM in $(seq 2885 1 3015); do
         printf "${SCENES[$SCENENUM]}" && sleep 1 && clear
    done

    # Scene 90
    for SCENENUM in $(seq 3016 1 3062); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.3 && clear
    done

    # Scene 91
    for SCENENUM in $(seq 3063 1 3070); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.5 && clear
    done

    # Scene 92
    for SCENENUM in $(seq 3071 1 3150); do
         printf "${SCENES[$SCENENUM]}" && sleep 0.1 && clear
    done

    # Scene 93
    for SCENENUM in $(seq 3151 1 3158); do
         printf "${SCENES[$SCENENUM]}" && sleep 1 && clear
